streamlit run streamlit_app.py
st.subheader("📦 Mise à jour automatique des assets")

col1, col2 = st.columns(2)
with col1:
    use_manifest = st.checkbox("Utiliser le fichier assets_manifest.json", value=True)
with col2:
    from_downloads = st.checkbox("Importer depuis le dossier Téléchargements", value=True)

if st.button("🧹 Télécharger & Ranger les fichiers"):
    manifest_path = Path("assets_manifest.json") if use_manifest else None
    summary = run_assets(manifest_path, from_downloads=from_downloads)
    st.success("Assets mis à jour avec succès.")
    st.write("🎙️ Voix :", [str(p.name) for p in summary["voices"]])
    st.write("🎞️ Vidéos :", [str(p.name) for p in summary["videos"]])
    st.write("📝 Sous-titres :", [str(p.name) for p in summary["subtitles"]])
